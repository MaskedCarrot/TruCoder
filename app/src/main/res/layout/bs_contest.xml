<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="50dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/contestBottomSheet_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/contestBottomSheet_name"
        android:layout_marginHorizontal="5dp"
        style="@style/TextAppearance.AppCompat.Large"
        android:textColor="#333232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_ _"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
    <ImageButton
        android:id="@+id/contestBottomSheet_remind"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calender"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contestBottomSheet_startDate"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#535353"
                android:text="- -"
                style="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:id="@+id/contestBottomSheet_startTime"
                android:layout_width="wrap_content"
                android:textColor="#535353"
                android:layout_height="wrap_content"
                android:text="- -" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ends"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contestBottomSheet_endDate"
                android:layout_marginHorizontal="10dp"
                android:textColor="#535353"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                style="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:id="@+id/contestBottomSheet_endTime"
                android:layout_width="wrap_content"
                android:textColor="#535353"
                android:layout_height="wrap_content"
                android:text="- -"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_duration"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contestBottomSheet_duration"
                android:layout_marginHorizontal="10dp"
                android:textColor="#535353"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                style="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>